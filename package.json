{
  "name": "magicsell",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "description": "MagicSell - Sales and Delivery Management System",
  "main": "api/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm ci && npm run build",
    "build:api": "cd api && npm run vercel-build",
    "build:frontend": "cd frontend && npm run vercel-build",
    "build:frontend-only": "cd frontend && npm run vercel-build",
    "start": "cd api && npm start",
    "install:all": "npm install && cd api && npm install && cd ../frontend && npm install",
    "clean": "rimraf dist build node_modules api/node_modules frontend/node_modules"
  },
  "workspaces": [
    "frontend",
    "api"
  ],
  "dependencies": {
    "mongodb": "^6.6.0"
  },
  "keywords": [
    "sales",
    "delivery",
    "management",
    "react",
    "nodejs",
    "express"
  ],
  "author": "MagicSell Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.0",
    "shx": "^0.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
